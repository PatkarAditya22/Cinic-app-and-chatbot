<% include partials/header %>
<link href="https://fonts.googleapis.com/css?family=Voces&display=swap" rel="stylesheet">
<style>
    h1 {
        font-family: 'Voces', cursive;
    }
    #btn {
        font-size: 120;
    }
    .s {
        height: 80px;
    }
</style>
<div class="section lb">
    <div class="container">
        <br>
        <div class="row">
            <h1 style="text-align: center">Add a review for Dr <%= doctor.fname %></h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/doctors/<%= doctor._id %>/newreview" method="POST">
                    <div class="form-group">
                        <input style="font-size: 125%;" class="form-control s" type="text" name="text" placeholder="Add a review">
                    </div>
                    <div class="form-group">
                        <button id="btn" class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

